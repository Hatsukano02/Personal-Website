{
  "kind": "collectionType",
  "collectionName": "media_works",
  "info": {
    "singularName": "media-work",
    "pluralName": "media-works",
    "displayName": "Media Work",
    "description": "影视动画作品记录"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "configurable": false,
      "private": false
    },
    "original_title": {
      "type": "string",
      "configurable": false,
      "private": false
    },
    "poster_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ],
      "configurable": false,
      "private": false
    },
    "trailer_video": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "videos"
      ],
      "configurable": false,
      "private": false
    },
    "soundtrack_audio": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "audios"
      ],
      "configurable": false,
      "private": false
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "Movie",
        "Series",
        "Documentary",
        "Animation"
      ],
      "required": true,
      "configurable": false,
      "private": false
    },
    "release_year": {
      "type": "integer",
      "configurable": false,
      "private": false
    },
    "director": {
      "type": "string",
      "configurable": false,
      "private": false
    },
    "genre": {
      "type": "json",
      "configurable": false,
      "private": false
    },
    "personal_rating": {
      "type": "decimal",
      "min": 0,
      "max": 10,
      "configurable": false,
      "private": false
    },
    "review": {
      "type": "blocks",
      "configurable": false,
      "private": false
    },
    "watch_date": {
      "type": "date",
      "configurable": false,
      "private": false
    },
    "watch_platform": {
      "type": "string",
      "configurable": false,
      "private": false
    },
    "trailer_url": {
      "type": "string",
      "regex": "^https?:\\/\\/.+",
      "configurable": false,
      "private": false
    },
    "imdb_url": {
      "type": "string",
      "regex": "^https?:\\/\\/.+",
      "configurable": false,
      "private": false
    },
    "douban_url": {
      "type": "string",
      "regex": "^https?:\\/\\/.+",
      "configurable": false,
      "private": false
    },
    "bangumi_url": {
      "type": "string",
      "regex": "^https?:\\/\\/.+",
      "configurable": false,
      "private": false
    },
    "is_favorite": {
      "type": "boolean",
      "default": false,
      "configurable": false,
      "private": false
    },
    "watch_status": {
      "type": "enumeration",
      "enum": [
        "Watched",
        "Watching",
        "Plan_to_Watch"
      ],
      "default": "Plan_to_Watch",
      "configurable": false,
      "private": false
    },
    "display_order": {
      "type": "integer",
      "required": true,
      "default": 0,
      "configurable": false,
      "private": false
    }
  }
}