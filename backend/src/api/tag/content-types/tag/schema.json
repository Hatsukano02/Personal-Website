{
  "kind": "collectionType",
  "collectionName": "tags",
  "info": {
    "singularName": "tag",
    "pluralName": "tags",
    "displayName": "Tag",
    "description": "标签系统"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true,
      "configurable": false,
      "private": false
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true,
      "configurable": false,
      "private": false
    },
    "color": {
      "type": "string",
      "regex": "^#[0-9A-Fa-f]{6}$",
      "configurable": false,
      "private": false
    },
    "description": {
      "type": "text",
      "configurable": false,
      "private": false
    },
    "blog_posts": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::blog-post.blog-post",
      "mappedBy": "tags"
    }
  }
}
